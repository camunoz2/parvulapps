generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

datasource db {
  provider             = "mysql"
  url                  = env("DATABASE_URL")
  referentialIntegrity = "prisma"
}

model Student {
  id       Int    @id @default(autoincrement())
  name     String
  lastName String
  rut      String
  // Class Relation -- one student cant belong on more than one class

  grade     Grade       @relation(fields: [gradeId], references: [id])
  gradeId   Int
  Indicator Indicator[]

  @@index([gradeId])
}

model Grade {
  id        Int       @id @default(autoincrement())
  classroom String
  section   String
  students  Student[]
}

model Indicator {
  id               Int            @id @default(autoincrement())
  description      String         @db.VarChar(500)
  objetive         Objetive       @relation(fields: [objetiveId], references: [id])
  score            Int
  term             EvaluationTerm @relation(fields: [evaluationTermId], references: [id])
  student          Student        @relation(fields: [studentId], references: [id])
  objetiveId       Int
  evaluationTermId Int
  studentId        Int

  @@index([objetiveId, studentId])
}

model Objetive {
  id          Int         @id @default(autoincrement())
  description String      @db.VarChar(500)
  core        Core        @relation(fields: [coreId], references: [id])
  Indicator   Indicator[]
  coreId      Int

  @@index([coreId])
}

model Core {
  id          Int        @id @default(autoincrement())
  description String
  category    Category   @relation(fields: [categoryId], references: [id])
  Objetive    Objetive[]
  categoryId  Int

  @@index([categoryId])
}

model Category {
  id          Int    @id @default(autoincrement())
  description String
  Core        Core[]
}

model Teacher {
  id          Int      @id @default(autoincrement())
  name        String
  lastName    String
  rut         String
  mail        String
  permissions String
  lastLogin   DateTime
}

model EvaluationTerm {
  id        Int         @id @default(autoincrement())
  name      String
  Indicator Indicator[]
}
